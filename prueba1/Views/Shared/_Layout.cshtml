<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />                                             
        <title> Ejercicio ASP.NET MVC</title>                                  
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />  @*Icono para mostrar en la pestaña*@
        <meta name="viewport" content="width=device-width" />
@*        @Styles.Render("~/Content/css") *@
        @Scripts.Render("~/bundles/jquery")      
        @Scripts.Render("~/bundles/modernizr")                                   
    
    </head>

    <body>

        <header>
            <div>

                <div class="segundo">
                    @RenderSection("login", required: false)
    
                </div>
            </div>
        </header>


        <div id="body">
            @RenderSection("menu", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>


        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Sistema de usuarios</p>
                </div>
            </div>
        </footer>

        @RenderSection("scripts", required: false)
            
   
    </body>
</html>
