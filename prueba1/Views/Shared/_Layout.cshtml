<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />                                               @*Permitir caracteres especiales*@
        <title> Ejercicio ASP.NET MVC</title>                                  @*Titulo*@
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />  @*Icono para mostrar en la pestaña*@
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")                                        @*Carga hoja de estilo CSS*@
        @Scripts.Render("~/bundles/modernizr")                                 @*Carga archivos javascript*@
    </head>

    <body>


        <header>
            <div class="content-wrapper">

                <div class="float-right">
                    <h2 id="menu"> Gestion de Usuarios </h2>
                </div>

            </div>
        </header>


        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>


        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Sistema de gestion de reservas</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
