@model prueba1.Models.Usuario

<h3> Dar de alta usuario en el sistema </h3>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Usuario</legend>

        <div class="editor-label">
            <h3> Nombre </h3>
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.Nombre) 
            
            @*            
            La expresion "model => model.Nombre" es una lambda expression
            lo cual es equivalente a decir Function(Data x) { return x.Name }
            Los métodos Html.--- se usan para devolver objetos de la clase
            definida en @model
            *@
            
            @Html.ValidationMessageFor(model => model.Nombre)
        </div>

        <div class="editor-label">
            <h3> Apellido </h3>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Apellido)
            @Html.ValidationMessageFor(model => model.Apellido)
        </div>

        <div class="editor-label">
            <h3> Correo electronico </h3>
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.mail)
            @Html.ValidationMessageFor(model => model.mail)
        </div>

        <p>
            <input type="submit" value="Crear usuario" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
