@using prueba1.Models;
@model Tuple<Usuario , Telefono>

@{
    ViewBag.Title = "Create";
}

<h2>Crear usuario nuevo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Usuario</legend>

        <div class="editor-label">
            <span>Nombre</span>
        </div>
        <div class="editor-field">
            @Html.EditorFor(tuple => tuple.Item1.Nombre)
            @Html.ValidationMessageFor(tuple => tuple.Item1.Nombre)
        </div>

        <div class="editor-label">
            <span>Apellido</span>
        </div>
        <div class="editor-field">
            @Html.EditorFor(tuple => tuple.Item1.Apellido)
            @Html.ValidationMessageFor(tuple => tuple.Item1.Apellido)
        </div>

        <div class="editor-label">
            <span>Correo electronico</span>
        </div>
        <div class="editor-field">
            @Html.EditorFor(tuple => tuple.Item1.mail)
            @Html.ValidationMessageFor(tuple => tuple.Item1.mail)
        </div>

         <div class="editor-label">
            <span> Telefono </span>
        </div>
        <div class="editor-field">
            @Html.EditorFor(tuple => tuple.Item2.numero)
            @Html.ValidationMessageFor(tuple => tuple.Item2.numero)
        </div>

        <p>
            <input type="submit" value="Crear usuario" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Ir a inicio", "Index", "Home")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
